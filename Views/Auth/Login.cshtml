
@model ReservationSystem.Models.User

@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center">Login</h2>

<div class="container mt-4">
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <form asp-action="Login" method="post" class="card p-4 shadow-sm rounded">
        <div class="form-group mb-3">
            <label asp-for="Username" class="form-label">Username / Email</label>
            <input asp-for="Username" class="form-control" required placeholder="Username / Email" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label" >Password</label>
            <input asp-for="Password" class="form-control" type="password"  placeholder="Password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
